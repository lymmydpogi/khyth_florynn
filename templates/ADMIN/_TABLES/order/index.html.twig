{% extends 'ADMIN/base.html.twig' %}

{% block title %}Order Index{% endblock %}
{% block page_title %}Orders{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="{{ asset('style/css/ORDER/order.css') }}">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section">
    <h1>Order Management Dashboard</h1>
    <p>Track, manage, and process all customer orders efficiently from a single centralized interface.</p>
</section>

<!-- Flash Messages -->
<!-- Flash Messages (SweetAlert) -->
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                Swal.fire({
                    title: '{{ label|capitalize }}',
                    text: '{{ message }}',
                    icon: '{{ label == "success" ? "success" : "error" }}',
                    confirmButtonText: 'OK',
                });
            });
        </script>
    {% endfor %}
{% endfor %}

<!-- Order Table Section -->
<section class="order-table-section">
    <h2 class="section-title">All Orders</h2>

    <div class="btn-container mb-3">
        <a href="{{ path('app_order_new') }}" class="btn-create">
            <span>+</span> Create New Order
        </a>
    </div>

    <div class="table-container">
        <table class="table" id="ordersTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Client Name</th>
                    <th>Client Email</th>
                    <th>Service</th>
                    <th>Status</th>
                    <th>Delivery Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.user ? order.user.name ?: 'Unnamed User' : order.clientName ?: 'N/A' }}</td>
                        <td>{{ order.user ? order.user.email : order.clientEmail ?: 'N/A' }}</td>
                        <td>{{ order.service ? order.service.name : 'N/A' }}</td>
                        <td>{{ order.status }}</td>
                        <td>{{ order.deliveryDate ? order.deliveryDate|date('Y-m-d') : 'N/A' }}</td>
                        <td>
                            <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn-show">Show</a>
                            <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn-edit">Edit</a>

                            {% if order.status == 'Completed' %}
                                <a href="{{ path('app_order_receipt', {'id': order.id}) }}" class="btn-receipt">Receipt</a>
                            {% endif %}

                            <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="empty-state text-center py-4">No orders found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>


{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
                lengthMenu: [5, 10, 20, 50],
                order: [[0, 'desc']],
                columnDefs: [
                    { orderable: false, targets: -1 }
                ],
                language: {
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ orders",
                    infoEmpty: "Showing 0 to 0 of 0 orders",
                    infoFiltered: "(filtered from _MAX_ total orders)",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
{% endblock %}
