{% extends 'ADMIN/base.html.twig' %}

{% block title %}User Details{% endblock %}
{% block page_title %}User Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/CLIENT/client-show.css') }}">
{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="content-container">

        <!-- Header -->
        <div class="header-section">
            <h1>{{ user.name ?? user.email }}</h1>
            <p>Complete details of this user</p>
        </div>

        <!-- User Details Card -->
        <div class="details-card">
            <table class="table">
                <tbody>
                    <tr>
                        <th>User ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ user.name ?? 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    {% if user.phone is defined %}
                    <tr>
                        <th>Phone</th>
                        <td>{{ user.phone ?? 'N/A' }}</td>
                    </tr>
                    {% endif %}
                    {% if user.address is defined %}
                    <tr>
                        <th>Address</th>
                        <td>{{ user.address ?? 'N/A' }}</td>
                    </tr>
                    {% endif %}
                    <tr>
                        <th>Roles</th>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge badge-role">{{ role|replace({'ROLE_': ''}) }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                    {% if user.status is defined %}
                    <tr>
                        <th>Status</th>
                        <td>
                            <span class="status-badge status-{{ user.status|lower }}">
                                {{ user.status|title }}
                            </span>
                        </td>
                    </tr>
                    {% endif %}
                    <tr>
                        <th>Created At</th>
                        <td>{{ user.createdAt ? user.createdAt|date('F d, Y h:i A') : 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="{{ path('app_user_index') }}" class="btn btn-back">Back to Users</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-edit">Edit User</a>
        </div>

    </div>
</div>
{% endblock %}
