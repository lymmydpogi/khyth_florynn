{% extends 'ADMIN/base.html.twig' %}

{% block title %}User{% endblock %}
{% block page_title %}User Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/CLIENT/client.css') }}">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
{% endblock %}

{% block body %}
<div class="page-header">
    <h1>User Management Dashboard</h1>
    <p>Manage all users, track activity, communicate, generate reports, and ensure security from one place.</p>
</div>

<section class="client-table-section">
    <h2 class="section-title">All Users</h2>

    <div class="btn-container">
        <a href="{{ path('app_user_new') }}" class="btn-create">
            <span>+</span> Add New User
        </a>
    </div>

    <div class="table-container">
        <table class="table" id="clientsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if clients is not empty %}
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.name ?: 'N/A' }}</td>
                            <td>{{ client.email }}</td>
                            <td>{{ client.phone ?: 'N/A' }}</td>
                        
                       <td>
    {% set displayRole = client.roles[0] is iterable ? client.roles[0][0] : client.roles[0] %}
    {{ displayRole is defined ? displayRole|replace({'ROLE_':''}) : 'N/A' }}
</td>




                            <td>
                                <a href="{{ path('app_user_show', {'id': client.id}) }}" class="btn-action">Show</a>
                                {% if is_granted('USER_EDIT', client) %}
                                    <a href="{{ path('app_user_edit', {'id': client.id}) }}" class="btn-action">Edit</a>
                                {% endif %}
                                {% if is_granted('USER_DELETE', client) %}
                                    <form method="post" action="{{ path('app_user_delete', {'id': client.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" class="empty-state text-center">No users found.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#clientsTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
                lengthMenu: [5, 10, 20, 50],
                order: [[0, 'desc']],
                pagingType: "simple_numbers",
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search users...",
                    paginate: {
                        previous: "‹",
                        next: "›"
                    },
                    info: "Showing _START_ to _END_ of _TOTAL_ users",
                    infoEmpty: "No users available",
                    zeroRecords: "No matching users found",
                    lengthMenu: "Show _MENU_ entries"
                },
                columnDefs: [
                    { orderable: false, targets: -1 } // Actions column
                ]
            });

            // SweetAlert2 flash messages
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    Swal.fire({
                        title: '{{ label|capitalize }}',
                        text: '{{ message|e('js') }}',
                        icon: '{{ label == "success" ? "success" : (label == "warning" ? "warning" : (label == "info" ? "info" : "error")) }}',
                        confirmButtonText: 'OK',
                        allowOutsideClick: false,
                        customClass: {
                            popup: 'florynn-swal-popup',
                            title: 'florynn-swal-title',
                            content: 'florynn-swal-content',
                            confirmButton: 'florynn-swal-confirm'
                        }
                    });
                {% endfor %}
            {% endfor %}
        });
    </script>
{% endblock %}
