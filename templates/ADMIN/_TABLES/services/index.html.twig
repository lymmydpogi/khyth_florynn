{% extends 'ADMIN/base.html.twig' %}

{% block title %}Services{% endblock %}
{% block page_title %}Services{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="{{ asset('style/css/SERVICE/service.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
{% endblock %}

{% block body %}
<section class="hero-section">
    <h1>Service Management Dashboard</h1>
    <p>Manage your services, pricing, delivery times, and availability all in one place.</p>
</section>

<h2 class="section-title">All Services</h2>
<div class="btn-container">
    <a href="{{ path('app_services_new') }}" class="btn-create">
        <span>+</span> Create New Service
    </a>
</div>

<section class="service-table-section">
    <div class="table-container">
        <table class="table" id="servicesTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price (₱)</th>
                    <th>Status</th>
                    <th>Pricing Unit</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for service in services %}
                    <tr>
                        <td>{{ service.id }}</td>
                        <td>{{ service.name }}</td>
                        <td>{{ service.description }}</td>
                        <td>₱{{ service.price|number_format(2, '.', ',') }}</td>
                        <td>{{ service.status }}</td>
                        <td>{{ service.pricingUnit }}</td>
                        <td>
                            <a href="{{ path('app_services_show', {'id': service.id}) }}">Show</a>
                            <a href="{{ path('app_services_edit', {'id': service.id}) }}">Edit</a>
                            <form method="post" action="{{ path('app_service_delete', {'id': service.id}) }}" 
                                  style="display:inline-block;" 
                                  onsubmit="return confirm('Are you sure you want to delete this service?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="empty-state">No services found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#servicesTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
                lengthMenu: [5, 10, 20, 50],
                order: [[0, 'desc']],
                columnDefs: [
                    { orderable: false, targets: -1 } // Actions column
                ]
            });

            // Flash messages (only show popups for success/error)
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    Swal.fire({
                        title: '{{ label|capitalize }}',
                        text: '{{ message }}',
                        icon: '{{ label == "success" ? "success" : "error" }}',
                        confirmButtonText: 'OK',
                    });
                {% endfor %}
            {% endfor %}
        });
    </script>
{% endblock %}
