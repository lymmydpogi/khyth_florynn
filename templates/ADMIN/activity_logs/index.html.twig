{% extends 'ADMIN/base.html.twig' %}

{% block title %}Activity Logs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/DASHBOARD/activity_logs.css') }}">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"/>
{% endblock %}

{% block body %}
<div class="container mt-4">

    <!-- Hero Section -->
    <div class="page-header">
        <h1>Activity Logs</h1>
        <p>View all user actions including logins, logouts, and CRUD operations.</p>
    </div>

    <!-- Table -->
    <div class="table-container table-responsive">
        <table id="activityLogs" class="table table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>User</th>
                    <th>Role</th>
                    <th>Action</th>
                    <th>Details</th>
                    <th>Date / Time</th>
                </tr>
            </thead>
            <tbody>
                {% if logs is empty %}
                    <tr class="empty-state">
                        <td colspan="6" class="text-center">No activity logs found.</td>
                    </tr>
                {% else %}
                    {% for log in logs %}
                        <tr>
                            <td>{{ log.userId }}</td>
                            <td>{{ log.userEmail }}</td>
                            <td>
                                <span class="badge badge-role">{{ log.role|replace({'ROLE_': ''}) }}</span>
                            </td>
                            <td>
                                <span class="badge badge-action">{{ log.action|replace({'_': ' '})|title }}</span>
                            </td>
                            <td>{{ log.actionDetails ?: '-' }}</td>
                            <td nowrap>{{ log.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#activityLogs').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 10,
                lengthMenu: [5, 10, 20, 50],
                order: [[5, 'desc']], // Sort by date descending
                pagingType: "simple_numbers",
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search logs...",
                    paginate: {
                        previous: "‹",
                        next: "›"
                    },
                    info: "Showing _START_ to _END_ of _TOTAL_ logs",
                    infoEmpty: "No logs available",
                    zeroRecords: "No matching logs found",
                    lengthMenu: "Show _MENU_ entries"
                },
                columnDefs: [
                    { orderable: true, targets: '_all' }
                ],
                responsive: true
            });
        });
    </script>
{% endblock %}
