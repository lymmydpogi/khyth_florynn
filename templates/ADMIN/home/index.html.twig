{% extends 'ADMIN/base.html.twig' %}

{% block title %}Home - Dashboard{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/DASHBOARD/home.css') }}">
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="logo-container">
            <img src="{{ asset('images/avatars/cd_logo.png') }}" alt="Campana Designs Logo">
        </div>
        <h1>Welcome Admin</h1>
        <p>Manage your services, track orders, and grow your business with powerful tools at your fingertips.</p>
        <div class="hero-cta">
            <a href="{{ path('app_services_new') }}" class="btn-primary">Get Started</a>
            <a href="{{ path('app_services_index') }}" class="btn-secondary">View Services</a>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="stats-section">
        <h2 class="section-title">Your Performance</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-trend up">↑ 12%</span>
                </div>
                <div class="stat-value">{{ activeServices }}</div>
                <div class="stat-label">Active Services</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-trend up">↑ 8%</span>
                </div>
                <div class="stat-value">{{ pendingOrders }}</div>
                <div class="stat-label">Pending Orders</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-trend up">↑ 23%</span>
                </div>
                <div class="stat-value">{{ totalUsers }}</div>
                <div class="stat-label">Total Clients</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <span class="stat-trend up">↑ 15%</span>
                </div>
                <div class="stat-value">₱{{ monthlyRevenue|number_format(2, '.', ',') }}</div>
                <div class="stat-label">Revenue (MTD)</div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-section">
        <h2 class="section-title">What You Can Do</h2>
        <div class="features-grid">
            <div class="feature-card">
                <h3>Launch Services</h3>
                <p>Create and manage your services with ease. Get started in minutes.</p>
            </div>
            
            <div class="feature-card">
                <h3>Track Growth</h3>
                <p>Monitor your business metrics and make data-driven decisions.</p>
            </div>
            
            <div class="feature-card">
                <h3>Manage Clients</h3>
                <p>Keep track of all your clients and their orders in one place.</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h2 class="section-title">Quick Actions</h2>
        <div class="actions-grid">
            <a href="{{ path('app_services_new') }}" class="action-button">Add Service</a>
            <a href="{{ path('app_order_index') }}" class="action-button">View Orders</a>
            <a href="{{ path('app_user_new') }}" class="action-button">Add User</a>
            <a href="{{ path('app_analytics_index') }}" class="action-button">View Reports</a>
        </div>
    </div>
{% endblock %}
